numbers = []
num_elements = int(input("Enter the number of elements: "))
for i in range(num_elements):
    num = float(input("Enter number {}: ".format(i + 1)))
    numbers.append(num)
print("Initial list of numbers:", numbers)
insert_num = float(input("Enter the number to insert: "))
insert_index = int(input("Enter the position to insert: "))
numbers.insert(insert_index - 1, insert_num)
print("List of numbers after insertion:", numbers)
delete_index = int(input("Enter the position to delete: "))
deleted_num = numbers.pop(delete_index - 1)
print("List of numbers after deletion of element at position {}: {}".format(delete_index, numbers))
